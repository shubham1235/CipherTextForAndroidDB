<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shubham_v.ciphertextforandroiddb.MainActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="employe Id"
        android:ems="10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/employeID_id"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
      android:hint="employee name"
        android:ems="10"
        android:layout_marginTop="18dp"
        android:id="@+id/emplotyee_name_id"
        android:layout_below="@+id/employeID_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="department"
        android:ems="10"
        android:layout_marginTop="23dp"
        android:id="@+id/department_id"
        android:layout_below="@+id/emplotyee_name_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/insert_id"
        android:layout_below="@+id/department_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/showdatabase_id"
        android:layout_below="@+id/insert_id">

        <TextView
            android:text="data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/insert_id"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/data_text_id"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="center" />


    </ScrollView>

    <Button
        android:text="update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/update_id"
        android:layout_alignBaseline="@+id/insert_id"
        android:layout_alignBottom="@+id/insert_id"
        android:layout_toRightOf="@+id/insert_id"
        android:layout_toEndOf="@+id/insert_id" />

    <Button
        android:text="fetch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fetch_id"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_above="@+id/showdatabase_id"
        android:layout_toRightOf="@+id/update_id"
        android:layout_toEndOf="@+id/update_id" />

    <Button
        android:text="noOfrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/showdatabase_id"
        android:layout_toRightOf="@+id/fetch_id"
        android:layout_toEndOf="@+id/fetch_id"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/number_button_id" />


</RelativeLayout>
